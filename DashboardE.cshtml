@{
    ViewData["Title"] = "Employee Dashboard";
}
<div class="container">
    <h1 class="mb-4"><i class="bi bi-speedometer2"></i> Employee Dashboard</h1>

    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm mb-4 text-center">
                <div class="card-body">
                    <i class="bi bi-people text-success" style="font-size: 3rem;"></i>
                    <h3>@ViewBag.FarmerCount</h3>
                    <p>Total Farmers</p>
                </div>
                <div class="card-footer">
                    <a asp-action="FarmerDatabase" class="btn btn-outline-success btn-sm">View All Farmers</a>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm mb-4 text-center">
                <div class="card-body">
                    <i class="bi bi-box-seam text-success" style="font-size: 3rem;"></i>
                    <h3>@ViewBag.ProductCount</h3>
                    <p>Total Products</p>
                </div>
                <div class="card-footer">
                    <a asp-action="ProductList" class="btn btn-outline-success btn-sm">View All Products</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h3><i class="bi bi-clock-history"></i> Recent Products</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Farmer</th>
                            <th>Production Date</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Category.Name</td>
                                <td>
                                    <a asp-action="ViewFarmerProducts" asp-route-id="@product.FarmerId">
                                        @product.Farmer.FarmName
                                    </a>
                                </td>
                                <td>@product.ProductionDate.ToString("MM/dd/yyyy")</td>
                                <td>@product.Quantity @product.QuantityUnit</td>
                                <td>$@product.Price.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


